<simulation>
   <initialize nbeads='8'>
      <file format='pdb'> h2o.pdb </file>
      <resample_v> 150 </resample_v>
   </initialize>
   <output prefix='water'>
      <properties stride='1' filename='out'>  [ time, conserved, temperature, kinetic_cv, potential, pressure_cv] </properties>
      <trajectory stride='1' filename='pos'>positions</trajectory>
      <checkpoint stride='20'/>
   </output>
   <total_steps>1000</total_steps>
   <prng><seed>31415</seed></prng>
   <forces>
      <socket mode="inet">
         <address>localhost</address>   <port>31415</port>    <slots>4</slots>   <latency> 0.01</latency>
      </socket>
   </forces>
   <ensemble type='nvt'>
      <thermostat kind='pile_g'>
         <tau>1e2</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep>20</timestep>
      <fixcom>True</fixcom>
      <temperature>150</temperature>
   </ensemble>
</simulation>
