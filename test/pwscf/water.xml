<simulation>
   <initialize shape="(1)">  [ velocities ]  </initialize>
   <properties>  [ time, conserved, temperature, kinetic_cv, potential ] </properties>   
   <stride> { properties : 1, trajectory: 1,  trajectory_full : 1,  checkpoint:10 } </stride>
   <prefix> h2o </prefix>
   <total_steps>100</total_steps>
   <prng><seed>31415</seed></prng>
   <force type='socket'>
      <interface mode="inet">
         <address>localhost</address>   <port>31415</port>    <slots>4</slots>   <latency> 0.01</latency>
      </interface>
   </force>
   <atoms>
      <from_file>h2o.pdb</from_file>
   </atoms>
   <nbeads>8</nbeads>
   <cell flexible='False'>
      <h shape='(3, 3)'> 
       [ 10, 0, 1e-10,
         0.0, 10, 0, 
         0.0, 0.0, 10 ]
      </h>
      <m>25000.7229</m>
   </cell>
   <ensemble type='nvt'>
      <nm_propagator>true</nm_propagator>
      <thermostat kind='pile_g'>
         <tau>1e2</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep>50</timestep>
      <pressure>1.0</pressure>
      <fixcom>True</fixcom>
      <temperature>150</temperature>
   </ensemble>
</simulation>
