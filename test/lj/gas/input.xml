<simulation>
   <initialize nbeads='1'>
      <file format='pdb'> our_ref.pdb </file>
      <resample_v> 120 </resample_v>
   </initialize>
   <output prefix='test'>
      <properties stride='5' filename='out'>  [ time, conserved, temperature, kinetic_cv, potential, pressure_cv] </properties>
      <trajectory stride='100' filename='pos'>positions</trajectory>
      <checkpoint stride='2000'/>
   </output>
   <total_steps>200000</total_steps>
   <prng><seed>3348</seed></prng>
   <forces>
      <socket mode="unix">
         <address>localhost</address>   <port>31415</port>    <slots>4</slots> <latency>0.001</latency>
      </socket>
   </forces>
   <ensemble type='nvt'>
      <thermostat kind='pile_g'>
         <tau>1e2</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep>206.70687</timestep>
      <fixcom>False</fixcom>
      <temperature>59.6646</temperature>
   </ensemble>
</simulation>
