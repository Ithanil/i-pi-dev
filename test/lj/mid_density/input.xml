<simulation>
   <initialize nbeads='1'>
      <file mode='pdb'> our_ref.pdb </file>
      <velocities mode='thermal'> 80 </velocities>
   </initialize>
   <output prefix='lj-liquid'>
      <properties stride='5' filename='out'>  [ time, conserved, temperature, kinetic_md, potential, pressure_md] </properties>
      <trajectory stride='100' filename='pos'>positions</trajectory>
      <checkpoint stride='2000'/>
   </output>
   <total_steps>100000</total_steps>
   <prng><seed>3348</seed></prng>
   <forces>
      <socket mode="unix">
         <address>localhost</address>   <port>31415</port>    <slots>4</slots> <latency>0.001</latency>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='pile_g'>
         <tau>1e4</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep units='femtosecond'>0.4</timestep>
      <fixcom>False</fixcom>
      <temperature>39.36998597</temperature>
   </ensemble>
</simulation>
