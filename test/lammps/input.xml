<simulation>
   <initialize nbeads='8'>
      <file format='chk'> restart.chk  </file>
      <cell units="angstrom"> [ 51.8,0,0,0, 49.84,0,0,0, 200 ] </cell> 
      <resample_v> 300 </resample_v>
   </initialize>
   <output prefix='test'>
      <properties stride='100' filename='out' flush="100" >  [ time{picosecond}, conserved, temperature, kinetic_cv, potential ] </properties>
      <trajectory stride='5' filename='pos' flush="100">positions{angstrom}</trajectory>
      <checkpoint stride='20000' />
   </output>
   <total_steps>1000000</total_steps>
   <total_time>128000</total_time>
   <prng><seed>8417</seed></prng>
   <forces>
      <socket mode="unix">
         <address>rpmd</address>   <port>31415</port>    <slots>4</slots> <latency>0.0001</latency>
      </socket>
   </forces>
   <ensemble type='nvt'>
      <thermostat kind='svr'>  
         <tau units="femtosecond">1e3</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep units="femtosecond">1.0</timestep>
      <fixcom>True</fixcom>
      <temperature>300</temperature>
   </ensemble>
</simulation>
