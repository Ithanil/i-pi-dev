<simulation>
   <initialize nbeads='24'>
      <file format='pdb'> our_ref.pdb </file>
      <resample_v> 34 </resample_v>
   </initialize>
   <output prefix=''>
      <properties shape='(7)' filename='ph2-p24-17K-0bar-mht.out'>
       [ step, conserved, temperature, potential{kelvin}, kinetic_cv{kelvin}, 
         volume, pressure_cv ]
      </properties>
      <trajectory format='pdb' filename='ph2-p24-17K-0bar-mht.traj' stride='100' cell_units='angstrom'>positions{angstrom}</trajectory>
   </output>
   <total_steps>20000</total_steps>
   <prng><seed>31417</seed></prng>
   <forces>
      <socket mode="unix">
         <address>wrap-pi</address>   <port>31417</port>    <slots>4</slots> <latency>0.001</latency>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='pile_g'>
         <tau>  4.13413730e+02</tau>
         <ethermo> -4.67859114e+00</ethermo>
      </thermostat>
      <timestep units='femtosecond'>1  </timestep>
      <fixcom> True</fixcom>
      <temperature>  1.70000000e+01</temperature>
      <pressure>0</pressure>
   </ensemble>
</simulation>
