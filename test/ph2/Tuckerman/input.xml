<simulation>
   <initialize>  { velocities : 50, normal_modes : 25}  </initialize>
   <properties>  [ time, conserved, temperature, kinetic_cv, potential, pressure_cv, kstress_cv(0;0), virial_cv(0;0), volume] </properties>
   <trajectories>[positions]</trajectories>
   <stride> { properties : 5, trajectory: 100,  checkpoint:2000 } </stride>
   <prefix> test </prefix>
   <total_steps>200000</total_steps>
   <prng><seed>33428</seed></prng>
   <force type='socket'>
      <interface mode="unix">
         <address>localhost</address>   <port>31415</port>    <slots>4</slots> <latency>0.001</latency>
      </interface>
   </force>
   <beads>
      <start_centroid>
         <from_file>our_ref.pdb</from_file>
      </start_centroid>
      <nbeads>16</nbeads>
   </beads>
   <cell flexible='False'>
      <h shape='(3, 3)'> 
       [ 44.660, 5.71316101504e-15, 5.71316101504e-15,
         0.0, 44.660,  5.71316101504e-15, 
         0.0, 0.0, 44.660 ]
      </h>
      <m>3000000</m>
   </cell>
   <ensemble type='npt'>
      <barostat kind='rigid'>
         <thermostat kind='langevin'>
            <tau>1e5</tau>
         </thermostat>
      </barostat>
      <thermostat kind='pile_l'>
         <tau>1e5</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep>60</timestep>
      <pressure>0</pressure>
      <fixcom>False</fixcom>
      <temperature>25</temperature>
   </ensemble>
</simulation>
