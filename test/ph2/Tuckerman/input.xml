<simulation>
   <initialize nbeads='32'>
      <file format='pdb'> our_ref.pdb </file>
      <resample_v> 50 </resample_v>
   </initialize>
   <output prefix='npt'>
      <properties stride='5' filename='out'>  [ time, conserved, temperature, kinetic_cv, potential, pressure_cv, volume, cell_h6] </properties>
      <trajectory stride='100' filename='pos'>positions{angstrom}</trajectory>
      <trajectory stride='20' filename='xc' format='pdb'>x_centroid</trajectory>
      <checkpoint stride='5000'/>
   </output>
   <total_steps>200000</total_steps>
   <prng><seed>33428</seed></prng>
   <forces>
      <socket mode="unix">
         <address>wrap-pi</address>   <port>31415</port>    <slots>4</slots> <latency>0.001</latency>
      </socket>
   </force>
   <cell shape='(3,3)'>
       [ 44.660, 5.71316101504e-15, 5.71316101504e-15,
         0.0, 44.660,  5.71316101504e-15, 
         0.0, 0.0, 44.660 ]
   </cell>
   <ensemble type='npt'>
      <barostat kind='bzp'>
         <thermostat kind='langevin'>
            <tau>1e5</tau>
         </thermostat>
      </barostat>
      <thermostat kind='pile_l'>
         <tau>1e5</tau>
         <ethermo>0.0</ethermo>
      </thermostat>
      <timestep>60</timestep>
      <pressure>0</pressure>
      <fixcom>False</fixcom>
      <temperature>25</temperature>
   </ensemble>
</simulation>
