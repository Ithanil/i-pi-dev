<simulation mode="static">
   <output prefix='qtip4pf'>
      <properties stride='1' filename='out'>  [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_cv{electronvolt}, potential{electronvolt}, pressure_cv{megapascal}] </properties>
      <trajectory filename='pos' stride='20'> positions{angstrom} </trajectory>
   </output>
   <total_steps>500000</total_steps>
   <prng><seed>32342</seed></prng>
   <ffsocket name="qtip4pf" mode="unix" pbc="false">
      <address>driver</address>
   </ffsocket>
   <system>
   <initialize nbeads='1'> 
      <file mode='pdb'> water_298K.pdb </file>
   </initialize>
   <forces>
   <force> qtip4pf </force>
   </forces>
   <mover mode='minimize'>
     <optimizer mode="sd">
        <line_search> <step> 1.e-2 </step> <adaptive> 0 </adaptive> </line_search>
     </optimizer>
   </mover>
</system>
</simulation>
