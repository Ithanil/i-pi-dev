<simulation>
   <initialize nbeads='8'>
      <file mode='pdb'> h2o-init.pdb </file>
      <velocities mode='thermal'> 150 </velocities>
   </initialize>
   <output prefix='h2o_output'>
      <properties stride='1' filename='out'>  [ time, conserved, temperature, kinetic_cv, potential, pressure_cv] </properties>
      <trajectory stride='1' filename='pos'>positions</trajectory>
      <checkpoint stride='20'/>
   </output>
   <total_steps>1000</total_steps>
   <prng><seed>31416</seed></prng>
   <forces>
      <socket mode="inet">
         <address>localhost</address>   <port>31416</port>   <timeout>100</timeout>   <latency> 0.01</latency>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='pile_l'>
         <tau units="femtosecond">100</tau>
      </thermostat>
      <timestep units="femtosecond">0.5</timestep>
      <fixcom>True</fixcom>
      <temperature>150</temperature>
   </ensemble>
</simulation>
