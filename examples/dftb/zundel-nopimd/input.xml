<simulation verbosity="medium">
    <ffsocket mode='unix' name='driver'>
         <latency>  1.00000000e-02</latency>
         <slots>4</slots>
         <port>20614</port>
         <timeout>  6.00000000e+02</timeout>
         <address>dftb-zundel-nobias</address>
   </ffsocket>
   <total_steps>100000</total_steps>
   <output prefix="data">
      <trajectory stride="2" filename="pos" cell_units="angstrom">positions{angstrom}</trajectory>
      <trajectory stride="2" filename="xc" format="xyz">x_centroid{angstrom}</trajectory>
      <properties stride="2"> [ step, time, conserved, temperature{kelvin}, kinetic_cv, 
            potential] </properties>
   </output>
   <prng>
      <seed>18885</seed>
   </prng>
   <system>
      <forces> <force name="driver">driver</force></forces>
      <initialize nbeads="1">
        <file mode="xyz" units="angstrom">./zundel.xyz</file>
        <cell>
         [   100.29166, 0, 0, 0, 100.29166, 0, 0, 0, 100.29166 ]
        </cell>
      </initialize>
      <ensemble mode='nvt'>
         <timestep units="femtosecond"> 0.25 </timestep>
         <thermostat mode='langevin'>
            <tau units="femtosecond">100</tau>
         </thermostat>
         <temperature units="kelvin"> 300.0 </temperature>
      </ensemble>
  </system>
</simulation>
