<simulation verbosity='low' mode="paratemp">
   <output prefix='ph2'>
      <properties stride='1' filename='out'>  [
             step, time{picosecond}, conserved{kelvin}, temperature{kelvin},
             kinetic_cv{kelvin}, potential{kelvin}, pressure_cv{megapascal},
             ensemble_temperature{kelvin}, ensemble_bias{kelvin}
             ]
      </properties>
      <trajectory stride='100' filename='pos' format='pdb' cell_units="angstrom">positions{angstrom}</trajectory>
      <checkpoint stride='2000'/>
   </output>
   <prng><seed>31415</seed></prng>
   <total_steps>100000</total_steps>
   <total_time>7200</total_time>
   <ffsocket name="sg" mode="unix">
      <latency>0.001</latency>  <address>ph2_wte</address>
   </ffsocket>
   <paratemp>
      <temp_list units="kelvin"> [ 30, 40, 50 ] </temp_list>
      <wte_means units="kelvin">  [ -1.30385e+04, -1.22969e+04, -1.17848e+04 ] </wte_means>
      <wte_sigmas units="kelvin"> [ 3.02109e+02, 2.94790e+02, 3.43593e+02 ] </wte_sigmas>
      <wte_gammas> [ 10, 10, 10 ] </wte_gammas>
      <stride> 1e10 </stride>
   </paratemp>
   <system copies="3" prefix="ID">
      <initialize nbeads='1'>
         <file mode='pdb'> our_ref.pdb </file>
         <velocities mode="thermal" units='kelvin'> 50 </velocities>
      </initialize>
      <forces>
        <force nbeads="1" name="sg-ff"> sg </force>
      </forces>
      <ensemble mode='nvt'>
         <thermostat mode="pile_g">
            <tau units="femtosecond"> 10 </tau>
         </thermostat>
         <timestep units='femtosecond'> 5 </timestep>
         <temperature units='kelvin'>25</temperature>
      </ensemble>
   </system>
</simulation>
