<simulation verbosity='high'>
   <initialize nbeads='4'>
      <file mode='pdb' units='angstrom'> our_ref.pdb </file>
      <velocities mode='thermal'> 50 </velocities>
   </initialize>
   <output prefix='tut1'>
      <properties filename='prop' stride='1'> [time{picosecond}, conserved{kelvin}, kinetic_cv{kelvin}, potential{kelvin}] </properties>
      <properties filename='force' stride='20'> [atom_f{piconewton}(atom=0;bead=0)] </properties>
      <trajectory filename='pos' stride='100' format='xyz'> positions{angstrom} </trajectory>
      <checkpoint filename='check' stride='1000' overwrite='yes'/>
   </output>
   <total_steps>5000</total_steps>
   <prng> <seed> 31415 </seed> </prng>
   <forces>
      <socket mode="unix">
         <address>localhost</address>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='pile_l'>
         <tau>1e3</tau>
      </thermostat>
      <timestep units='femtosecond'>1</timestep>
      <temperature>25</temperature>
   </ensemble>
</simulation>
