<simulation verbosity='high'>
   <initialize nbeads='4'>
      <file mode='chk'> tutorial-1_RESTART </file>
   </initialize>
   <output prefix='tut2'>
      <properties filename='prop' stride='1'> [time{picosecond}, conserved{kelvin}, kinetic_cv{kelvin}, potential{kelvin}] </properties>
      <properties filename='force' stride='20'> [atom_f{piconewton}(atom=0;bead=0)] </properties>
      <trajectory filename='pos' stride='100' format='pdb' cell_units='angstrom'> positions{angstrom} </trajectory>
      <checkpoint filename='check' stride='1000' overwrite='True'/>
   </output>
   <total_steps>20000</total_steps>
   <prng> <seed> 31415 </seed> </prng>
   <forces>
      <socket mode="unix">
         <address>localhost</address>
      </socket>
   </forces>
   <ensemble mode='npt'>
      <barostat>
         <thermostat mode='langevin'>
            <tau>1e2</tau>
         </thermostat>
         <tau>1e5</tau>
      </barostat>
      <thermostat mode='pile_l'>
         <tau>1e3</tau>
      </thermostat>
      <timestep units='femtosecond'>1</timestep>
      <temperature>25</temperature>
      <pressure> 0 </pressure>
   </ensemble>
</simulation>
