<simulation>
   <initialize nbeads='2'> 
      <velocities mode='thermal' units='kelvin'> 400 </velocities>
      <positions mode='pdb'> water1.pdb </positions>
   </initialize>
   <output prefix='cp2k.test'>
      <properties filename='out' stride='1'>  [ step, time{picosecond}, conserved{kelvin}, temperature{kelvin}, kinetic_cv{kelvin}, potential{kelvin}, pressure_cv{megapascal}] </properties>   
      <trajectory filename='pos' stride='50'>  positions{angstrom} </trajectory>
   </output>
   <total_steps>100000</total_steps>
   <prng><seed>33346</seed></prng>
   <forces>
      <socket mode="unix">
         <address>localhost</address>
      </socket>
   </forces>
   <cell>
      [ 10.218000, 5.71316101504e-15, 5.71316101504e-15,
        0.0, 10.218000,  5.71316101504e-15, 
        0.0, 0.0, 10.218000 ]
   </cell>
   <ensemble mode='nvt'>
       <thermostat mode='pile_l'>
         <tau units='femtosecond'>25</tau>
      </thermostat>
      <timestep units='femtosecond'> 0.5</timestep>
      <fixcom>False</fixcom>
      <temperature units='kelvin'>200</temperature>
   </ensemble>
</simulation>
