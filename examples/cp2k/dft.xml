<simulation>
   <initialize shape="(1)">  [ velocities ]  </initialize>
   <properties shape='(5)'>  [ time, conserved, temperature, kinetic_cv, potential ] </properties>   
   <stride> { properties : 5, trajectory: 100, trajectory_full: 100,  checkpoint:10000 } </stride>
   <prefix> testdft </prefix>
   <traj_format> pdb </traj_format>
   <total_steps>100000</total_steps>
   <prng><seed>33346</seed></prng>
   <force type='socket'>
      <interface mode="unix">
         <address>localhost</address>   <port>12345</port>    <slots>4</slots> <latency>0.001</latency>
      </interface>
   </force>
   <atoms>
      <from_file>../in-g-one.pdb</from_file>
   </atoms>
   <nbeads>4</nbeads>
   <cell flexible='False'>
      <h shape='(3, 3)'> 
       [ 20.00, 0.0, 0.0, 
         0.0, 20.00, 0.0, 
         0.0, 0.0, 20.00 ]
      </h>
   </cell>
   <ensemble type='nvt'>
      <nm_propagator>true</nm_propagator>
       <thermostat kind='pile_l'>
         <tau>3e4</tau>
         <ethermo>0.0</ethermo>
      </thermostat>

      <timestep> 20.33534334</timestep>
      <pressure>1.0</pressure>
      <fixcom>False</fixcom>
      <temperature>100</temperature>
   </ensemble>
</simulation>
