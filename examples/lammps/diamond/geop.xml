<simulation mode="static" verbosity="medium">
   <output prefix='opgeo'>
      <properties stride='1' filename='out'>  [ step, potential{electronvolt}] </properties>
      <trajectory stride='1' filename='pos'>  positions{angstrom}  </trajectory>
   </output>
   <total_steps> 1000 </total_steps>
   <ffsocket name="lmp" mode="unix" pbc="true">
      <address> driver </address>  <latency> 1e-4</latency>
   </ffsocket>
   <system>
    <initialize nbeads='1'> 
      <file mode='xyz' units='angstrom'>  diamondase.xyz </file>
     <!-- <cell mode='manual'> [ 6.90673130,-6.70154426e-03, 1.37853015e-03, 0.0, 6.51506357, -1.77985356e-02, 0.0, 0.0, 6.712027 ] </cell> -->
    <cell mode='manual' units="angstrom"> [3.467 ,0,0,0,3.467,0,0,0,3.667 ] </cell>
    </initialize>
    <forces>
     <force forcefield="lmp"> </force>
    </forces>
    <motion mode='minimize'>
      <optimizer mode='cg'>
	<tolerances>
	  <energy> 1e-12 </energy>
	  <force> 1e-12 </force>
	  <position> 1e-12 </position>
	  	</tolerances>
       <ls_options>
          <tolerance> 1e-10 </tolerance>
         <!-- <iter> 5 </iter>-->
	</ls_options>
	<optimize_cell> False </optimize_cell> -->
      <!--	<scale_jacobian> 100.0 </scale_jacobian> -->
	<biggest_step>
	100.0
	</biggest_step>
	</optimizer>
    </motion>
   </system>
</simulation>


