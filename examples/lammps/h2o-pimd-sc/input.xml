<simulation mode="md">
   <output prefix='simulation'>
      <properties stride='40' filename='out'> [ step, time{picosecond}, conserved{electronvolt}, temperature{kelvin}, kinetic_tdsc{electronvolt}, kinetic_opsc{electronvolt}, potential_tdsc{electronvolt}, potential_opsc{electronvolt}, pressure_cv{megapascal} ] </properties>
      <trajectory filename='pos' stride='20'> positions </trajectory>
      <checkpoint stride='200'/>
   </output>
   <total_steps>40000</total_steps>
   <prng><seed>31415</seed></prng>
   <ffsocket name="lammps" mode="unix">
      <address>no_rpc_sc</address>
   </ffsocket>
   <system>
      <initialize nbeads='4'>
         <file mode='xyz'> water.xyz </file>
         <velocities mode="thermal" units='kelvin'> 300 </velocities>
         <cell>  [   35.233, 0, 0, 0, 35.233, 0, 0, 0, 35.233 ]  </cell>
      </initialize>   
      <forces><force> lammps </force></forces>
      <mover mode='dynamics'>
         <dynamics mode='sc'>
            <timestep units='femtosecond'> 0.25 </timestep>
            <thermostat mode='langevin'>
                <tau units='femtosecond'> 100 </tau>
            </thermostat>
         </dynamics>           
      </mover>
      <ensemble>
         <temperature units='kelvin'> 300 </temperature>
      </ensemble>
   </system>
</simulation>
