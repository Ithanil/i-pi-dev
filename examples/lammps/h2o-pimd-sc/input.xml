<simulation verbosity="high">
  <output prefix="sc">
    <properties stride="1" filename="out">[step, time{picosecond}, conserved, temperature{kelvin}, kinetic_cv, kinetic_cvsc, potential, 
    potential_scop, potential_scth, pressure_cv{megapascal} ] </properties>
    <trajectory filename="pos" stride="20"> positions </trajectory>
  </output>
  <total_steps>50000</total_steps>
  <prng>
	  <seed>32345</seed>
  </prng>
  <ffsocket name="lmpserial" mode="unix">
    <address>no_rpc</address> <latency>1e-4</latency>
  </ffsocket>
  <system>
    <initialize nbeads="16">
      <file mode="pdb"> water_298K.pdb </file>
      <velocities mode="thermal" units="kelvin"> 596 </velocities>
    </initialize>
    <forces>
      <force> lmpserial </force>
    </forces>
    <ensemble mode="sc">
      <thermostat mode="pile_g">
        <tau units="femtosecond">25</tau>
      </thermostat>
      <timestep units="femtosecond"> 0.25</timestep>
      <temperature units="kelvin">298</temperature>
    </ensemble>
  </system>
</simulation>


