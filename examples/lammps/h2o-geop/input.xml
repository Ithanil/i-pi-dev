<simulation mode="static" verbosity="high">
  <output prefix='simulation'>
    <properties stride='1' filename='out'>  [ step, time{picosecond},
    potential{atomic_unit}] </properties>
    <trajectory filename='pos' stride='20'> positions{angstrom} </trajectory>
    <trajectory filename='for' stride='20'> forces{atomic_unit} </trajectory>
  </output>
  <total_steps> 1000 </total_steps>
  <prng>
    <seed> 32342 </seed>
  </prng>
  <ffsocket name="qtip4pf" mode="unix" pbc="false">
    <address> driver </address>
  </ffsocket>
  <system>
    <initialize nbeads='1'>
      <file mode='pdb'> water_298K.pdb </file>
      <!-- <cell mode='abc'> [35.233, 35.233, 35.233] </cell> -->
    </initialize>
    <forces>
      <force forcefield="qtip4pf"> </force>
    </forces>
    <motion mode='minimize'>
      <optimizer mode="bfgs">
        <tolerances>
          <energy> 1e-8 </energy>
          <force> 1e-8 </force>
          <position> 1e-8 </position>
        </tolerances>
      </optimizer>
    </motion>
  </system>
</simulation>
