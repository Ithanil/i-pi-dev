<simulation>
   <initialize nbeads='32'> 
      <file mode='pdb'> water_298K.pdb </file>
      <velocities mode="thermal"> 298 </velocities>
   </initialize>
   <output prefix='test'>
      <properties stride='1' filename='out'>  [ time, conserved, temperature, kinetic_cv, potential ] </properties>
      <trajectory filename='pos' stride='20'> positions </trajectory>
   </output>
   <total_steps>500000</total_steps>
   <prng><seed>32346</seed></prng>
   <forces>
      <socket mode='inet'>
         <address>neptune.chem.ox.ac.uk</address>   <port>32346</port>    <slots>4</slots> <latency>0.001</latency>
      </socket>
      <socket mode='inet' nbeads='5'>
         <address> neptune.chem.ox.ac.uk </address>
         <port> 32347 </port>
      </socket>
   </forces>
   <ensemble mode='nvt'>
      <thermostat mode='langevin'>
         <tau>5e2</tau>
      </thermostat>

      <timestep units='femtosecond'> 0.1</timestep>
      <temperature>298</temperature>
      <fixcom>True</fixcom>
   </ensemble>
</simulation>
